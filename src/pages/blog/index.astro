---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
}).catch(() => []);

const sortedPosts = posts.sort((a, b) => {
  return new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime();
});
---

<Layout
  title="Blog | Build with Jeremy"
  description="Tips, insights, and strategies for solopreneurs and small teams to streamline their businesses."
>
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
          Blog
        </h1>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
          Practical tips and insights on building systems that work for your business.
        </p>
      </div>

      {sortedPosts.length > 0 ? (
        <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
              {post.data.featuredImage && (
                <img
                  src={post.data.featuredImage}
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                  loading="lazy"
                />
              )}
              <div class="p-6">
                <time class="text-sm text-gray-500" datetime={post.data.publishDate.toISOString()}>
                  {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                <h2 class="mt-2 text-xl font-bold text-gray-900">
                  <a href={`/blog/${post.id}`} class="hover:text-primary transition-colors">
                    {post.data.title}
                  </a>
                </h2>
                {post.data.description && (
                  <p class="mt-2 text-gray-600 line-clamp-3">
                    {post.data.description}
                  </p>
                )}
                <a
                  href={`/blog/${post.id}`}
                  class="mt-4 inline-flex items-center text-primary font-semibold hover:underline"
                >
                  Read more
                  <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="mt-12 text-center py-16 bg-slate-50 rounded-2xl">
          <svg class="h-16 w-16 text-gray-300 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <h2 class="mt-4 text-xl font-bold text-gray-900">Coming Soon</h2>
          <p class="mt-2 text-gray-600">
            New articles are on the way. Check back soon!
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>
