---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header class="theme-bg-primary border-b sticky top-0 z-50 transition-colors" style="border-color: var(--border-color);">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="font-bold text-xl theme-text-primary hover:text-brand transition-colors">
        Build with Jeremy
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-sm font-medium transition-colors ${
              isActive(link.href)
                ? 'text-brand'
                : 'theme-text-secondary hover:theme-text-primary'
            }`}
          >
            {link.label}
          </a>
        ))}
        <a
          href="/contact"
          class="btn btn-primary text-sm"
        >
          Work With Me
        </a>
      </div>

      <!-- Mobile: menu button -->
      <div class="flex items-center md:hidden">
        <button
          type="button"
          class="p-2 rounded-md theme-text-secondary hover:theme-text-primary hover:theme-bg-secondary transition-colors"
          id="mobile-menu-button"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <span class="sr-only">Open menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 border-t" style="border-color: var(--border-color);">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
              isActive(link.href)
                ? 'text-brand theme-bg-secondary'
                : 'theme-text-secondary hover:theme-text-primary hover:theme-bg-secondary'
            }`}
          >
            {link.label}
          </a>
        ))}
        <a
          href="/contact"
          class="block px-3 py-2 mt-2 btn btn-primary text-center"
        >
          Work With Me
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const expanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!expanded));
    mobileMenu?.classList.toggle('hidden');
  });
</script>
