---
import ThemeToggle from './ThemeToggle.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  main: [
    { href: '/about', label: 'About' },
    { href: '/services', label: 'Services' },
    { href: '/contact', label: 'Contact' },
  ],
  aiEmployee: [
    { href: '/ai-employee/', label: 'Overview' },
    { href: '/ai-employee/marketing-agencies/', label: 'For Marketing Agencies' },
    { href: '/ai-employee/seo-agencies/', label: 'For SEO Agencies' },
    { href: '/ai-employee/social-media-agencies/', label: 'For Social Media Agencies' },
    { href: '/ai-employee/recruiting-agencies/', label: 'For Recruiting Agencies' },
  ],
  social: [
    { href: 'https://www.linkedin.com/in/jeremy-pittman-49720428', label: 'LinkedIn', icon: 'linkedin' },
    { href: 'https://x.com/jeremyrpittman', label: 'X', icon: 'x' },
    { href: 'https://www.youtube.com/jeremyrpittman', label: 'YouTube', icon: 'youtube' },
  ],
};
---

<footer class="theme-bg-inverse text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="sm:col-span-2 lg:col-span-1">
        <a href="/" class="font-bold text-xl text-white">Build with Jeremy</a>
        <p class="mt-4 text-slate-400 text-sm leading-relaxed">
          Strategic ops partner helping established small teams scale without chaos.
        </p>
        <!-- Social Links -->
        <div class="mt-6 flex items-center gap-4">
          {footerLinks.social.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-400 hover:text-accent transition-colors"
              aria-label={link.label}
            >
              {link.icon === 'linkedin' && (
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {link.icon === 'x' && (
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
              {link.icon === 'youtube' && (
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider text-slate-400 mb-4">
          Quick Links
        </h3>
        <ul class="space-y-3">
          {footerLinks.main.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-slate-300 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- AI Employee -->
      <div class="sm:col-span-2 lg:col-span-2">
        <h3 class="font-semibold text-sm uppercase tracking-wider text-slate-400 mb-4">
          AI Employee Setup
        </h3>
        <ul class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-3">
          {footerLinks.aiEmployee.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-slate-300 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright & Theme Toggle -->
    <div class="mt-12 pt-8 border-t border-slate-700/50 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-slate-500 text-sm">&copy; {currentYear} Build with Jeremy. All rights reserved.</p>
      <div class="flex items-center gap-3">
        <span class="text-slate-500 text-xs">Theme:</span>
        <ThemeToggle />
      </div>
    </div>
  </div>
</footer>
