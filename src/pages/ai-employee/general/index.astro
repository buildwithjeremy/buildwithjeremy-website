const whatYouGet = [
  {
    title: 'Pre-configured Mac Mini',
    description: 'Hardware included. OpenClaw installed. Ready to plug in and go.',
  },
  {
    title: 'Your tools, connected',
    description: 'Google Workspace, Slack, HubSpot, ClickUp, Webflow—whatever you use, integrated.',
  },
  {
    title: 'Brand voice & context',
    description: 'Trained on your website, SOPs, and team preferences. Sounds like you, not a robot.',
  },
  {
    title: 'Warm-up period',
    description: 'I run it for days/weeks before shipping—building context and testing workflows.',
  },
  {
    title: 'Security-first setup',
    description: 'Dedicated email seat, permission controls, no admin access to critical systems.',
  },
  {
