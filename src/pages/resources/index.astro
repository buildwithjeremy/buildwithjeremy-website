---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import NewsletterForm from '../../components/NewsletterForm.astro';

const resources = await getCollection('resources').catch(() => []);
---

<Layout
  title="Resources | Build with Jeremy"
  description="Free guides, templates, and tools to help you streamline your business."
>
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
          Resources
        </h1>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
          Free guides, templates, and tools to help you work smarter, not harder.
        </p>
      </div>

      {resources.length > 0 ? (
        <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {resources.map((resource) => (
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
              {resource.data.featuredImage && (
                <img
                  src={resource.data.featuredImage}
                  alt={resource.data.title}
                  class="w-full h-48 object-cover"
                  loading="lazy"
                />
              )}
              <div class="p-6">
                <span class="inline-block px-3 py-1 text-xs font-semibold text-primary bg-primary/10 rounded-full uppercase">
                  {resource.data.resourceType}
                </span>
                <h2 class="mt-3 text-xl font-bold text-gray-900">
                  {resource.data.title}
                </h2>
                {resource.data.description && (
                  <p class="mt-2 text-gray-600">
                    {resource.data.description}
                  </p>
                )}
                <a
                  href={`/resources/${resource.id}`}
                  class="mt-4 btn btn-primary inline-block"
                >
                  {resource.data.gated ? 'Get Free Access' : 'Download Now'}
                </a>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="mt-12 text-center py-16 bg-slate-50 rounded-2xl">
          <svg class="h-16 w-16 text-gray-300 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h2 class="mt-4 text-xl font-bold text-gray-900">Resources Coming Soon</h2>
          <p class="mt-2 text-gray-600 max-w-md mx-auto">
            I'm working on some helpful guides and templates. Subscribe to be the first to know when they're ready!
          </p>
        </div>
      )}

      <!-- Newsletter CTA -->
      <div class="mt-16">
        <NewsletterForm
          variant="card"
          title="Get Notified of New Resources"
          description="Join the newsletter and I'll let you know whenever I release new guides, templates, and tools."
          buttonText="Subscribe"
        />
      </div>
    </div>
  </section>
</Layout>
